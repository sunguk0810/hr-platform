# VPC Endpoints for HR SaaS Platform
# Replaces NAT Gateway for cost savings (~$45/month vs ~$65/month NAT)
# Required for ECS Fargate in private subnets to access AWS services

# Security Group for VPC Endpoints
resource "aws_security_group" "vpc_endpoints" {
  count = var.enable_vpc_endpoints ? 1 : 0

  name        = "${var.project}-${var.environment}-vpc-endpoints-sg"
  description = "Security group for VPC Endpoints"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port       = 443
    to_port         = 443
    protocol        = "tcp"
    security_groups = [aws_security_group.ecs_tasks.id, aws_security_group.redis.id]
    description     = "HTTPS from ECS tasks and Redis Fargate"
  }

  tags = merge(var.tags, {
    Name = "${var.project}-${var.environment}-vpc-endpoints-sg"
  })
}

# ECR API Endpoint (for ECR API calls)
resource "aws_vpc_endpoint" "ecr_api" {
  count = var.enable_vpc_endpoints ? 1 : 0

  vpc_id              = aws_vpc.main.id
  service_name        = "com.amazonaws.${var.aws_region}.ecr.api"
  vpc_endpoint_type   = "Interface"
  subnet_ids          = aws_subnet.private[*].id
  security_group_ids  = [aws_security_group.vpc_endpoints[0].id]
  private_dns_enabled = true

  tags = merge(var.tags, {
    Name = "${var.project}-${var.environment}-ecr-api-endpoint"
  })
}

