{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "HTTP Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1m])) by (job)",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "HTTP Request Latency p95 (ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=~\"$service\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "{{job}} p95"
        }
      ]
    },
    {
      "title": "HTTP Error Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\", status=~\"5..\"}[5m])) by (job) / sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[5m])) by (job) * 100",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "JVM Heap Memory Used",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 }
        }
      },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=~\"$service\", area=\"heap\"}",
          "legendFormat": "{{job}} - {{id}}"
        }
      ]
    },
    {
      "title": "JVM GC Pause Duration (ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "drawStyle": "bars", "lineWidth": 1, "fillOpacity": 50 }
        }
      },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=~\"$service\"}[1m]) / rate(jvm_gc_pause_seconds_count{job=~\"$service\"}[1m]) * 1000",
          "legendFormat": "{{job}} - {{cause}}"
        }
      ]
    },
    {
      "title": "GC Collections per Second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_count{job=~\"$service\"}[1m])",
          "legendFormat": "{{job}} - {{action}}"
        }
      ]
    },
    {
      "title": "HikariCP Active Connections",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 }
        }
      },
      "targets": [
        {
          "expr": "hikaricp_connections_active{job=~\"$service\"}",
          "legendFormat": "{{job}} active"
        },
        {
          "expr": "hikaricp_connections_idle{job=~\"$service\"}",
          "legendFormat": "{{job}} idle"
        },
        {
          "expr": "hikaricp_connections_max{job=~\"$service\"}",
          "legendFormat": "{{job}} max"
        }
      ]
    },
    {
      "title": "HikariCP Connection Wait Time (ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "rate(hikaricp_connections_acquire_seconds_sum{job=~\"$service\"}[1m]) / rate(hikaricp_connections_acquire_seconds_count{job=~\"$service\"}[1m]) * 1000",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "JVM Thread Count",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=~\"$service\"}",
          "legendFormat": "{{job}} live"
        },
        {
          "expr": "jvm_threads_peak_threads{job=~\"$service\"}",
          "legendFormat": "{{job}} peak"
        }
      ]
    },
    {
      "title": "Process CPU Usage (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 },
          "max": 100,
          "min": 0
        }
      },
      "targets": [
        {
          "expr": "process_cpu_usage{job=~\"$service\"} * 100",
          "legendFormat": "{{job}}"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["hr-saas", "spring-boot", "jvm"],
  "templating": {
    "list": [
