# HR Platform Frontend - Environment Variables
# Copy this file to .env.local and fill in the values

# ===================================
# API Configuration
# ===================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8080/api

# WebSocket URL for real-time notifications
VITE_WS_URL=ws://localhost:8088/ws

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===================================
# Authentication (Keycloak)
# ===================================

# Keycloak server URL
VITE_KEYCLOAK_URL=http://localhost:8180

# Keycloak realm name
VITE_KEYCLOAK_REALM=hr-saas

# Keycloak client ID for this application
VITE_KEYCLOAK_CLIENT_ID=hr-platform-web

# ===================================
# Feature Flags
# ===================================

# Enable mock API for development (true/false)
VITE_ENABLE_MOCK=false

# Per-service mock overrides (optional)
# When set, overrides VITE_ENABLE_MOCK for a specific service
# VITE_MOCK_AUTH=false
# VITE_MOCK_EMPLOYEE=true
# VITE_MOCK_ORGANIZATION=true
# VITE_MOCK_ATTENDANCE=true
# VITE_MOCK_APPROVAL=true
# VITE_MOCK_MDM=true
# VITE_MOCK_TENANT=true
# VITE_MOCK_NOTIFICATION=true
# VITE_MOCK_FILE=true

# Enable debug mode with extra logging (true/false)
VITE_ENABLE_DEBUG=false

# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable Service Worker for offline support (true/false)
VITE_ENABLE_SERVICE_WORKER=false

# ===================================
# Third-party Services (Optional)
# ===================================

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxx

# ===================================
# File Upload
# ===================================

# Maximum file upload size in MB
VITE_MAX_UPLOAD_SIZE_MB=10

# Allowed file types for upload (comma-separated)
VITE_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.csv

# ===================================
# Application Settings
# ===================================

# Application name displayed in UI
VITE_APP_NAME=HR Platform

# Application version (auto-set from package.json in build)
VITE_APP_VERSION=0.0.1

# Default language (ko, en)
VITE_DEFAULT_LOCALE=ko

# Session timeout in minutes
VITE_SESSION_TIMEOUT_MINUTES=30

# ===================================
# Development Only
# ===================================

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable source maps in production build
VITE_ENABLE_SOURCE_MAPS=false
